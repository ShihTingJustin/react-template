{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@Style/*": ["src/style/*"],
      "@Components/*": ["src/components/*"],
      "@Layouts/*": ["layouts/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Interfaces/*": ["src/interfaces/*"],
      "@Pages/*": ["pages/*"],
      "@Redux/*": ["src/redux/*"],
      "@Routes/*": ["src/routes/*"],
      "@Services/*": ["src/services/*"],
      "@Slices/*": ["src/redux/slices/*"],
      "@Utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
